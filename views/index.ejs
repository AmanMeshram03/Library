    <h1> Welcome to Our Website Get.lib</h1>
   <h2>Search your books here !</h2>
</div>
<div class="box">
<div class="search-box">
    <form action="/" method="post">
        <input type="text" placeholder="Enter the Book Name" name="bookname"><button><i class="fa-solid fa-magnifying-glass" ></i></button>
    </form>
</div>
</div>
<!-- Fetching locals data from API -->
<h2>This Book is <%= locals.title %></h2>
<div class="book">
<div class="img-box" name="img">
<img src= "https://covers.openlibrary.org/b/id/<%= locals.value %>-L.jpg" alt="Book Image"> 
</div> 
<div class="book-detail">

<h3>Author Name -</h3><%= locals.authorname %>
<!-- Creating a Function to fetch data from Database through SQL Commands -->
    <% if(locals.booksinfo) { %>
    <% booksinfo.forEach((item)=> { %>
     
        <h3>About - </h3> <p><%= item.about %> </p> 
        <h4>How Strongly I Recommend It -<h4></h4><%= item.rating %>
        
        <% }); %>
    <% } %>

</div>
</div>
